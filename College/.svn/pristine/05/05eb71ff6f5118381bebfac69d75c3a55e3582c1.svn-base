.scroll-text-container{*zoom:1;display:block!important}.scroll-text-container:after{visibility:hidden;display:block;font-size:0;content:" ";clear:both;height:0}.scroll-text-container .text-box{float:left;overflow:hidden;text-align:left}.scroll-text-container ul{width:9999px}.scroll-text-container ul li{display:block;float:left;height:20px;line-height:20px;overflow:hidden;white-space:nowrap;text-overflow:ellipsis}.scroll-text-container ul li a{font-size:12px}.scroll-text-container .prev,.scroll-text-container .next{float:left}.scroll-text-container .prev a,.scroll-text-container .next a{zoom:1;width:20px;height:20px;display:block;text-indent:-999px;background:url(bg.png) no-repeat}.scroll-text-container .prev a{background-position:0 0}.scroll-text-container .prev a:hover{background-position:0 -20px}.scroll-text-container .next a{background-position:-20px 0}.scroll-text-container .next a:hover{background-position:-20px -20px}